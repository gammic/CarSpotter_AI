<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgGarageCar"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/car_placeholder"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/txtGarageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Auto"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtGarageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avvistata il..."
            android:textColor="@color/my_text_secondary"/>
    </LinearLayout>
</LinearLayout>